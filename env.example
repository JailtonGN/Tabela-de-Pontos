CORS_ORIGIN=http://localhost:3000

# ========================================
# LOGS E MONITORAMENTO
# ========================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# ========================================
# FEATURES AVANÃ‡ADAS
# ========================================
ENABLE_WEBSOCKET=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true 