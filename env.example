# ========================================
# CONFIGURAÃ‡Ã•ES DO SERVIDOR
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# MONGODB ATLAS
# ========================================
# Obtenha sua string de conexÃ£o em: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://seu_usuario:sua_senha@cluster.mongodb.net/tabela-pontos?retryWrites=true&w=majority

# ========================================
